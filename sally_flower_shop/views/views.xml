<odoo>
    <data>
        <record id="view_sally_flower_tree" model="ir.ui.view">
            <field name="name">sally.flower.tree</field>
            <field name="model">sally.flower</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="common_name"/>
                    <field name="scientific_name"/>
                    <field name="season_start"/>
                    <field name="season_end"/>
                </tree>
            </field>
        </record>

        <record id="view_sally_flower_form" model="ir.ui.view">
            <field name="name">sally.flower.form</field>
            <field name="model">sally.flower</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="common_name"/>
                            <field name="scientific_name"/>
                            <field name="season_start"/>
                            <field name="season_end"/>
                            <field name="watering_frequency"/>
                            <field name="watering_amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="menu_sally_flower" name="Flowers" parent="menu_sally_flower_shop" action="action_sally_flower"/>
        <act_window id="action_sally_flower" name="Flowers" res_model="sally.flower" view_mode="tree,form"/>

    </data>
</odoo>
