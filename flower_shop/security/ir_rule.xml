<odoo>
    <data noupdate="1">

        <record id="global_access_rule" model="ir.rule">
            <field name="name">Global Product Access</field>
            <field name="model_id" ref="model_product_product"/>
            <field name="domain_force">[('is_flower', '=', False)]</field>
        </record>

        <record id="gardener_access_rule" model="ir.rule">
            <field name="name">Gardener Product Access</field>
            <field name="model_id" ref="model_product_product"/>
            <field name="groups" eval="[(4, ref('flower_shop.gardeners_group'))]"/>
            <field name="domain_force">['|', ('gardeners_ids', '=', False), ('gardeners_ids', 'in', [user.id])]</field>
        </record>

    </data>
</odoo>