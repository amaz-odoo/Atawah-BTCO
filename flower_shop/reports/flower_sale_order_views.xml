<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sale_order">
        <t t-call="web.html_container">
            <t t-set="company" t-value="docs.company_id"/>
            <t t-set="report_header_style" t-value="'display: none;'"/>
            <t t-set="footer" t-value="'oe_hidden'"/>

            <t t-call="web.external_layout_boxed">
                <div class="first-page">
                    <h1 class="text-center" style="padding-top:20px; font-size:3.5em">
                        <t t-esc="company.name"/>
                    </h1>
                </div>
            </t>

            <t t-call="web.external_layout_boxed">
                <t t-foreach="products" t-as="flower"/>
                <h2>
                    <t t-esc="flower.name"/>
                </h2>

                <table class="table">
                    <tbody>
                        <tr>
                            <td>
                                <p style="font-weight:bold">Common Name:
                                    <span style="font-weight:normal">
                                        <t t-esc="flower.flower_id.common_name"/>
                                    </span>
                                </p>
                                <p style="font-weight:bold">Season Start:
                                    <span style="font-weight:normal">
                                        <t t-esc="flower.flower_id.season_start"/>
                                    </span>
                                </p>
                                <p style="font-weight:bold">Watering Frequency:
                                    <span style="font-weight:normal">
                                        <t t-esc="flower.flower_id.watering_frequency"/>
                                    </span>
                                </p>
                            </td>
                            <td style="background-color:#e3e3e3;">
                                <p style="font-weight:bold">Scientific Name:
                                    <span style="font-weight:normal">
                                        <t t-esc="flower.flower_id.scientific_name"/>
                                    </span>
                                </p>
                                <p style="font-weight:bold">Season End:
                                    <span style="font-weight:normal">
                                        <t t-esc="flower.flower_id.season_end"/>
                                    </span>
                                </p>
                                <p style="font-weight:bold">Watering Amount (ml):
                                    <span style="font-weight:normal">
                                        <t t-esc="flower.flower_id.watering_amount"/>
                                    </span>
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </t>

    </template>

    <!--    report action-->
    <record id="flower_sale_order_report_action" model="ir.actions.report">
        <field name="name">Flower Sale Orders</field>
        <field name="model">sale.order</field>
        <field name="report_name">flower_shop.report_sale_order</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_flower_sale_order"/>
    </record>


    <!--    Paper Format-->
    <record id="paperformat_flower_sale_order" model="report.paperformat">
        <field name="name">Flower Sale Order</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">75</field>
        <field name="page_width">75</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_spacing">60</field>
        <field name="dpi">150</field>
    </record>


</odoo>