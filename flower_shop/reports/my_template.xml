<odoo>
  <data>

    <template id="sale_order_id_flower" name="flower_sale_order">
      <t t-call="web.html_container">
      <t t-set="company" t-value="docs[0].company_id"/>
       <t t-set="report_header_style" t-value="'display: none;'"/>
       <t t-set="footer" t-value="'oe_hidden'"/>
       <t t-call="web.external_layout_boxed">
       
       <t t-foreach="docs" t-as="docs">
        <div class="page">
                <h1 style="margin-left:25% ;margin-top:10%;font-size:60px;color:gray;margin-bottom:90%">My Company(San Francisco)</h1>
              
            
            <h1>Flower shop</h1>
            <t t-set="lines_to_report" t-value="docs._get_order_lines_to_report()"/>

            <t t-foreach="lines_to_report" t-as="line">
            <table class="table table-sm o_main_table table-borderless" style="width:900px;" >
              
              <tbody>
              <!-- <t t-set="current_subtotal" t-value="0"/> -->
              
                <tr>
                    <td>
                      <p>Common Name:<t t-out="line.Common_Name" /> </p>
                      <p>Season Start:<t t-out="line.Season_Start_Date" />  </p>
                      <p>Watering Frequency:<t t-out="line.Watering_Frequency" />  </p>
                    </td>
                    <td>
                     <p>Scientific Name:<t t-out="line.Scientific_Name" />  </p>
                     <p>Season End:<t t-out="line.Season_End_Date" />  </p>
                     <p>Watering Amount(ml):<t t-out="line.Watering_Amount" />  </p>
                    </td>
                    
                </tr>
                
              
               </tbody>
              
            </table>
           </t>
        </div>
       </t>
       </t>   
      </t>  
      
    </template>
    

    <record id="flower_sale_order_view" model="ir.actions.report">
      <field name="name">Flower sale order</field>
      <field name="model">sale.order</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">flower_shop.sale_order_id_flower</field>
      <field name="report_file">flower_shop.sale_order_id_flower</field>
      <field name="print_report_name">'%s' % object.name</field>
      <field name="binding_model_id" ref="sale.model_sale_order"/>
      <field name="binding_type">report</field>
    </record>      
     

   

  </data>
</odoo>