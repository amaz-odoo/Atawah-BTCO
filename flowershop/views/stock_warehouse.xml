<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="stock_warehouse_inherited_tree" model="ir.ui.view">
            <field name="name">stock.warehouse_inherited</field> 
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button"
                        name="get_weather"
                        string="Get Currnet Weather"
                        icon="fa-sun-o"
                        type="object">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text text-wrap">Get Current Weather</span>
                    </div>
                </button>
                    <button class="oe_stat_button"
                        name="get_allcaptures"
                        string="Get All Captures"
                        icon="fa-sun-o"
                        type="object">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text text-wrap">Get All Captures</span>
                    </div>
                </button>
                </xpath>
            </field>
        </record>
<!-- JUST VIEW OF WEATHER -->


        <record model="ir.ui.view" id="weather_view_tree">
            <field name="name">Weather info</field>
            <field name="model">stock.warehouse.weather</field>
            <field name="arch" type="xml">
                <tree>
                          <field name="warehouse_id" readonly='1'/>
                          <field name="description" readonly='1'/>
                          <field name="pressure" readonly='1'/>
                          <field name="temperature" readonly='1'/>

                          <field name="humidity" readonly='1'/>
                          <field name="wind_speed" readonly='1'/>
                          <field name="rain_volume" readonly='1'/>
                          <field name="capture_time" readonly='1'/>
                  </tree>
            </field>
          </record>
      
<!-- ============================================-->
<record id="ircron_get_weather" model="ir.cron">
    <field name="name">Get Weather</field>
    <field name="model_id" ref="model_stock_warehouse"/>
    <field name="state">code</field>
    <field name="code">model.get_weather_all_warehouses()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">hours</field>
    <field name="numbercall">-1</field>
</record>


<record id="ircron_get_Forecast" model="ir.cron">
    <field name="name">Get Forecast</field>
    <field name="model_id" ref="model_stock_warehouse"/>
    <field name="state">code</field>
    <field name="code">model.get_forecast_all_warehouses()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
</record>


</data>
</odoo>