<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
    
        <record id="weather_daily_scheduled_action" model="ir.cron">
            <field name="name">Weather API Caller</field>
            <field name="model_id" ref="model_stock_warehouse"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.get_weather_all_warehouses()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
        </record>

        <record id="weather_forecast_scheduled_action" model="ir.cron">
            <field name="name">Weather Forecast</field>
            <field name="model_id" ref="model_stock_warehouse"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.get_forecast_weather_all_warehouses()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

    </data>
</odoo>
