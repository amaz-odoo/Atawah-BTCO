<odoo>
  <data>
    <record id="action_flower_product" model="ir.actions.act_window">
      <field name="name">Flowers Product List</field>
      <field name="res_model">product.product</field>
      <field name="view_mode">kanban,tree,form,activity</field>
      <field name="context" eval="{'default_is_flower': True}" />
      <field name="domain" eval="[('is_flower', '=', True)]" />
    </record>

    <record id="product_normal_form_view_product" model="ir.ui.view">
      <field name="name">product.form.view.form.inherit</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <field name="needs_watering" invisible="1"/>
          <widget name="web_ribbon" title="NEEDS WATERING" bg_color="bg-danger" attrs="{'invisible': [('needs_watering', '=', False)]}"/>
        </xpath>
        <xpath expr="//div[@name='options']/span[last()]" position="after">
          <span class="d-inline-block">
            <field name="is_flower" on_change="1" />
            <label for="is_flower" string="Is Flower Product?" />
          </span>
        </xpath>
        <xpath expr="//field[@name='categ_id']" position="after">
          <field name="flower_id"
            attrs="{'required': [('is_flower', '=', True)],
                  'invisible': [('is_flower', '=', False)]}">
          </field>
        </xpath>
      </field>
    </record>

    <record id="sale_order_inherited_form" model="ir.ui.view">
      <field name="name">sale.order.view.form.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']"
          position="attributes">
          <attribute name="domain">
            [('is_flower', '=', True), ('sale_ok', '=', True), '|', ('company_id', '=', False),
            ('company_id', '=',
            parent.company_id)]
          </attribute>
          <attribute name="optional">show</attribute>
        </xpath>
        <!-- report -->
        <xpath expr="//form" position="attributes">
          <attribute name="edit" select="0" />
        </xpath>
      </field>
    </record>

  </data>
</odoo>