<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="flower_website_template" name="flower_website_template" inherit_id="website_sale.product">
        <xpath expr="//section[@id='product_detail']" position="inside">
            <div t-if="product.product_variant_id.is_flower and product.product_variant_id.flower_id">
                <t t-set="flower" t-value="product.product_variant_id.flower_id"/>
                <div>
                    <h2>Flower Details</h2>
                    <p><strong>Common Name:</strong> <t t-esc="flower.name"/></p>
                    <p><strong>Scientific Name:</strong> <t t-esc="flower.sci_name"/></p>
                    <p><strong>Season:</strong> <t t-esc="flower.season_start"/> <strong>To</strong> <t t-esc="flower.season_end"/></p>
                    <p><strong>Watering Frequency:</strong> <t t-esc="flower.watering_frequency"/></p>
                    <p><strong>Watering Amount (ml):</strong> <t t-esc="flower.watering_amount"/></p>
                </div>
            </div>
        </xpath>
    </template>
</odoo>